{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule":true,
    "module": "commonjs",
    "target": "es5",
    "sourceRoot": "./src",
    "typeRoots": [
      "./src/**/*"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}