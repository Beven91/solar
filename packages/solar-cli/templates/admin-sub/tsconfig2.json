{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "allowJs": true,
    "strict": false,
    "isolatedModules": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule":true,
    "experimentalDecorators":true,
    "module": "commonjs",
    "lib": [
      "es2019",
      "DOM"
    ],
    "target": "es5",
    "jsx": "react",
    "sourceRoot": "./packages"
  },
  "include": [
    "./src/**/*",
    "./node_modules/solar-types/**/*",
    "global.d.ts"
  ]
}