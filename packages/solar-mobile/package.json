{
  "name": "solar-mobile",
  "version": "2.0.1",
  "description": "solar mobile",
  "main": "index.ts",
  "types": "index",
  "scripts": {
    "test": "jest",
    "build": "webpack --config ./www/webpack.js",
    "start": "node ./www/index.js"
  },
  "pre-commit": [
    "test"
  ],
  "repository": {
    "type": "git"
  },
  "keywords": [
    "component",
    "solar"
  ],
  "license": "ISC",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "antd-mobile": "^2.0.3",
    "solar-core": "^2.2.7"
  },
  "dependencies": {
    "pinch-zoom-js": "^2.3.4",
    "@better-scroll/observe-dom":"^2.2.0",
    "@better-scroll/nested-scroll":"^2.2.0",
    "@better-scroll/core": "^2.2.0"
  },
  "devDependencies": {
    "solar-core": "*",
    "solar-jest-mock": "^1.0.0"
  },
  "jest": {
    "testURL": "https://solar.com/",
    "testPathIgnorePatterns": [
      "__tests__/app.tsx"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
  }
}