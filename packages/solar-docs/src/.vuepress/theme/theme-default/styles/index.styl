@require './config'
@require './code'
@require './custom-blocks'
@require './arrow'
@require './wrapper'
@require './toc'

html, body
  padding 0
  margin 0
  background-color #fff

body
  font-family -apple-system,BlinkMacSystemFont,Segoe UI,PingFang SC,Hiragino Sans GB,Microsoft YaHei,Helvetica Neue,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  color $textColor

.main-wrapper.vue {
  padding-top: 10px;
}

.solar-docs-page
  padding-left $sidebarWidth

.solar-docs-default-navbar
  position fixed
  z-index 20
  top 0
  left 0
  right 0
  height $navbarHeight
  background-color #fff
  box-sizing border-box
  border-bottom 1px solid $borderColor

.solar-docs-sidebar-mask
  position fixed
  z-index 9
  top 0
  left 0
  width 100vw
  height 100vh
  display none

.solar-docs-default-sidebar
  font-size 16px
  background-color #fff
  width $sidebarWidth
  position fixed
  z-index 10
  margin 0
  top $navbarHeight + 2rem
  left 0
  bottom 0
  box-sizing border-box
  border-right 1px solid $borderColor
  overflow-y auto

{$contentClass}:not(.custom) 
  @extend $wrapper
  > *:first-child
    margin-top $navbarHeight

  a:hover
    text-decoration underline

  p.demo
    padding 1rem 1.5rem
    border 1px solid #ddd
    border-radius 4px

  img
    max-width 100%

{$contentClass}.custom
  padding 0
  margin 0

  img
    max-width 100%

a.vue
  font-weight 500
  color $accentColor
  text-decoration none

p a code.vue
  font-weight 400
  color $accentColor

kbd.vue
  background #eee
  border solid 0.15rem #ddd
  border-bottom solid 0.25rem #ddd
  border-radius 0.15rem
  padding 0 0.15em

blockquote.vue
  font-size 1rem
  color #999;
  border-left .2rem solid #dfe2e5
  margin 1rem 0
  padding .25rem 0 .25rem 1rem

  & > p.vue
    margin 0

ul, ol.vue
  padding-left 1.2em

strong.vue
  font-weight 600

h1.vue, h2.vue, h3.vue, h4.vue, h5.vue, h6.vue
  font-weight 600
  line-height 1.25

  {$contentClass}:not(.custom) > &
    margin-top (0.5rem - $navbarHeight)
    padding-top ($navbarHeight + 1rem)
    margin-bottom 0

    &:first-child
      margin-top -1.5rem
      margin-bottom 1rem

      + p.vue, + pre.vue, + .custom-block.vue
        margin-top 2rem

  &:focus .header-anchor,
  &:hover .header-anchor
    opacity: 1

h1.vue
  font-size 2.2rem

h2.vue
  font-size 1.65rem
  padding-bottom .3rem
  border-bottom 4px solid $borderColor

h3.vue
  font-size 1.35rem
  padding-bottom: 0.8rem

h4.vue 
  padding-bottom: 0.6rem

a.header-anchor.vue
  font-size 0.85em
  float left
  margin-left -0.87em
  padding-right 0.23em
  margin-top 0.125em
  opacity 0

  &:focus,
  &:hover
    text-decoration none

code.vue, kbd.vue, .line-number.vue
  font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace

p.vue, ul.vue, ol.vue
  line-height 1.7

hr.vue
  border 0
  border-top 1px solid $borderColor

table.vue
  width:100%;
  border-collapse collapse
  margin 1rem 0
  color:#595959

table.vue,
table.vue code.vue 
  font-size: 13px

tr.vue
  border 1px solid rgba(0,0,0,.06)

th.vue
  font-weight: 600
  background:rgba(0,0,0,.02)
  white-space: nowrap

th.vue, td.vue
  // border 1px solid #dfe2e5
  padding 1em 1.6em
  text-align: left

.theme-container
  &.sidebar-open
    .solar-docs-sidebar-mask
      display: block

  &.no-navbar
    {$contentClass}:not(.custom) > h1, h2, h3, h4, h5, h6
      margin-top 1.5rem
      padding-top 0

    .solar-docs-default-sidebar
      top 0

@media (min-width: ($MQMobile + 1px))
  .theme-container.no-sidebar
    .solar-docs-default-sidebar
      display none

    .solar-docs-page
      padding-left 0

@require 'mobile.styl'